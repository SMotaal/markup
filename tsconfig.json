{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowJs": true,
    "keyofStringsOnly": true,
    // "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "preserveWatchOutput": false
  },
  "include": ["*/types.d.ts", "**/*.js"],
  "exclude": ["node_modules", "trash", "[trash]", "**/node_modules", "**/trash", "**/[trash]"]
}
